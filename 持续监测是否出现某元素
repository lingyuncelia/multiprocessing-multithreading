import _thread
import time

from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC 
from selenium.webdriver.common.by import By

def wait_for_you(myDynamicElement,delay):
    time.sleep(delay)
    if(EC.presence_of_element_located((By.XPATH,myDynamicElement))):
        driver.find_element_by_xpath("/html/body/div[1]/div[2]/div[1]/div/ul/li[1]/div/ul/li/div/div[1]/a").click()

def print_sth(a,b):
    time.sleep(b)
    print(a)

try:
    _thread.start_new_thread(wait_for_you,("//div[text()='最新']",10))
    _thread.start_new_thread(print_sth,("hello world",1))    
except:
    print('Error:unable to start thread')

from selenium import webdriver
driver=webdriver.Chrome('K:/zhusc/chromedriver.exe')
url="https://cn.bing.com/"
driver.get(url)
myDynamicElement="//div[text()='最新']"
wait_for_you(myDynamicElement,5)
